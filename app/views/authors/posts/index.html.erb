<p id="notice"><%= notice %></p>

<div class="flex flex-row justify-between items-center mt-4 mb-8">
  <div class="text-5xl text-yellow-500 font-light">Posts list</div>
  <%= link_to 'New Post', new_post_path, class: 'bg-yellow-400 hover:bg-yellow-600 text-white text-sm py-2 px-4 rounded' %>
</div>

<div class="grid grid-cols-3 lg:grid-cols-6 gap-3 grid-flow-col">
  <% @posts.each do |post| %>
      <%= link_to edit_post_path(post.id), class: 'block hover:bg-transparent' do %>
        <% render 'post', post: post %>
      <% end %>
  <% end %>
</div>